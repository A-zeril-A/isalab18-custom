<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_config_settings_view" model="ir.ui.view">
        <field name="name">purchase.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Purchase Management" id="purchase_management" string="Purchase Management" data-key="purchase_management">
                    <h2>Purchase Management Settings</h2>
                    <div class="row mt16 o_settings_container" id="end contract_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                
                                <!-- Editable Field: Purchase Responsible -->
                                <div class="o_setting_box mt16">
                                    <label for="purchase_responsible_id" class="o_form_label">Purchase Responsible</label>
                                    <div class="o_input_container">
                                        <field name="purchase_responsible_id" class="oe_inline" widget="many2one"/>
                                    </div>
                                </div>

                                <!-- Editable Field: Budget Approver -->
                                <div class="o_setting_box mt16">
                                    <label for="budget_approver_id" class="o_form_label">Budget Approver</label>
                                    <div class="o_input_container">
                                        <field name="budget_approver_id" class="oe_inline" widget="many2one"/>
                                    </div>
                                </div>

                                <!-- Editable Field: Budget Limitation -->
                                <div class="o_setting_box mt16">
                                    <label for="budget_limit" class="o_form_label">Budget Limitation</label>
                                    <div class="o_input_container">
                                        <field name="budget_limit" class="oe_inline"/>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
