<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Buttons template for My Business Trip Forms List View -->
    <t t-name="custom_business_trip_management.MyBusinessTripFormsButtons" t-inherit="web.ListView.Buttons" t-inherit-mode="primary">
        <xpath expr="//div[hasclass('o_list_buttons')]" position="inside">
            <button type="button" class="btn btn-primary o_list_button_create_request" t-on-click="() => this.showRequestTypeDialog()">
                Create New Request
            </button>
        </xpath>
    </t>

    <!-- Template for the List View (for controller reference) -->
    <t t-name="custom_business_trip_management.MyBusinessTripFormsListView" t-inherit="web.ListView" t-inherit-mode="primary">
    </t>

    <!-- Business Trip Request Type Dialog - OWL Component Template -->
    <t t-name="custom_business_trip_management.BusinessTripRequestTypeDialog">
        <Dialog title="'Create New Business Trip Request'" size="'lg'">
            <div class="modal-body">
                <p>Please select the type of business trip request you want to create:</p>
                
                <div class="row mt-4">
                    <div class="col-md-6 text-center">
                        <button class="btn btn-info btn-lg py-4 px-4 w-100" t-on-click="onWithQuotation">
                            <i class="fa fa-link fa-2x mb-2"></i>
                            <div>Related to a Quotation</div>
                        </button>
                    </div>
                    <div class="col-md-6 text-center">
                        <button class="btn btn-success btn-lg py-4 px-4 w-100" t-on-click="onStandalone">
                            <i class="fa fa-file-o fa-2x mb-2"></i>
                            <div>Standalone Request</div>
                        </button>
                    </div>
                </div>
            </div>
            <t t-set-slot="footer">
                <button type="button" class="btn btn-secondary" t-on-click="onCancel">Cancel</button>
            </t>
        </Dialog>
    </t>
</templates>
