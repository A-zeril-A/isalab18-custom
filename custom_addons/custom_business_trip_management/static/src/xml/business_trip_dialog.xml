<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Business Trip Form Selection Dialog - OWL Component Template -->
    <t t-name="custom_business_trip_management.BusinessTripFormSelectionDialog">
        <Dialog title="'Business Trip Form Selection'" size="'md'">
            <div class="modal-body">
                <div class="form-group">
                    <label>Selected Quotation:</label>
                    <p><strong><t t-esc="props.saleOrder.name or ''"/></strong></p>
                    <p>Customer: <t t-esc="props.saleOrder.partner_id[1] or ''"/></p>
                    <p>Total Amount: <t t-esc="props.saleOrder.amount_total or 0.0"/></p>
                </div>
                
                <div class="form-group">
                    <p>A new business trip request will be created for this quotation.</p>
                    <p>Do you want to proceed?</p>
                </div>
            </div>
            <t t-set-slot="footer">
                <button type="button" class="btn btn-secondary" t-on-click="onCancel">Cancel</button>
                <button type="button" class="btn btn-primary" t-on-click="onConfirm">Confirm</button>
            </t>
        </Dialog>
    </t>
</templates>
