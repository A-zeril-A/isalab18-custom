<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="custom_project_view_form_simplified" model="ir.ui.view">
        <field name="name">custom.project.view.form.simplified</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_project_view_form_simplified"/>
        <field name="arch" type="xml">
            <!-- In Odoo 17, the simplified view no longer has <group> elements -->
            <!-- We add our group structure before the alias definition (same appearance as before) -->
            <xpath expr="//div[@name='alias_def']" position="before">
                <group>
                    <group>
                        <field name="technical_director_id" options="{'no_create': True}"/>
                        <!--                        <field name="warning_message" widget="html"/>-->
                    </group>
                    <group>
                        <!--                        <span class="fa fa-exclamation-triangle" style="color: slateblue;"-->
                        <!--                              title="Important! This Person will be added to the Director group.">-->
                        <!--                        </span>-->
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Define Menu and action for Technical_Director (Director) and limits -->
    <record id="action_project_config" model="ir.actions.act_window">
        <field name="name">Project Configurations</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

    <record id="menu_project_config" model="ir.ui.menu">
        <field name="name">Project Configurations</field>
        <field name="parent_id" ref="project.menu_main_pm"/>
        <field name="sequence" eval="100"/>
        <field name="action" ref="custom_project.action_project_config"/>
        <field name="groups_id"
               eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Configuration >> Project -->
    <record id="custom_project_view_form" model="ir.ui.view">
        <field name="name">custom.project.view.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="state" widget="statusbar" options="{'clickable': '1'}"
                       statusbar_visible="draft,in_progress,completed"
                       groups="base.group_system"/>
            </xpath>


            <xpath expr="//group" position="after">

                <group>
                    <field name="allocated_hours"
                           widget="float_time"
                           groups="base.group_user"/>
                    <field name="total_task_hours"
                           widget="float_time"
                           readonly="1"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='user_id']" position="before">
                <field name="technical_director_id"/>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Task Hours">
                    <field name="task_ids" readonly="1">
                        <list>
                            <field name="name"/>
                            <field name="allocated_hours"/>
                            <field name="user_ids" string="Assignees" widget="many2many_tags"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_project_tree" model="ir.ui.view">
        <field name="name">custom.project.view.tree</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">


            <xpath expr="//list" position="attributes">
                <attribute name="decoration-warning">state=='in_progress'</attribute>
                <attribute name="decoration-success">state=='completed'</attribute>
            </xpath>
            <xpath expr="//list//field[@name='last_update_status']" position="after">
                <field name="state"/>
            </xpath>

        </field>
    </record>

    <!-- project.task
    To avoid editing planned_hours by other users I added a hidden field -->

    <record id="view_task_form_inherit" model="ir.ui.view">
        <field name="name">project.task.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">

            <!-- adding Director and PM to task Form -->
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="technical_director_id" readonly="1" widget="many2one_avatar_user"/>
                <field name="user_id" readonly="1"/>
            </xpath>

            <xpath expr="//sheet" position="inside">
                <field name="planned_hours_readonly" invisible="1"/>
                <!-- Fields needed for invisible conditions in Odoo 17 -->
                <field name="show_allocation" invisible="1"/>
                <field name="parent_id" invisible="1"/>
            </xpath>

            <!-- Note: In Odoo 17, planned_hours was renamed to allocated_hours and is added by hr_timesheet module -->
            <!-- The allocated_hours field is added via hr_timesheet.view_task_form2_inherited -->
            <!-- We add custom fields after the notebook instead -->
            <xpath expr="//notebook" position="before">
                <field name="total_project_hours" readonly="1" class="dark-purple-field"/>
                <label for="project_available_hours" string="Project Available Hours" invisible="parent_id or not show_allocation"/>
                <div class="o_row" invisible="parent_id or not show_allocation">
                    <field name="project_available_hours" nolabel="1" widget="float_time" readonly="1"/>
                    <span class="fa fa-info-circle ml-2" title="left for future tasks"/>
                </div>
                <field name="allocated_hours_current_employee" readonly="1" widget="float_time"/>
            </xpath>
        </field>
    </record>

    <!-- Task form view with assignment page added -->
    <record id="view_task_form_allocation_inherit" model="ir.ui.view">
        <field name="name">project.task.form.allocation.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <!-- Rename the Assignees (user_ids field) to the Followers. -->
            <!-- <xpath expr="//field[@name='user_ids']" position="attributes"> -->
                <!-- <attribute name="string">Followers</attribute> -->
            <!-- </xpath> -->
            <!-- <xpath expr="//field[@name='user_ids']" position="after">
                <field name="message_partner_ids" widget="many2many_tags" readonly="1" string="Followers" context="{'default_res_model': 'project.task'}"/>          
            </xpath> -->

            <!-- Add parent task hierarchy field after user_ids (Assignees) -->
            <xpath expr="//field[@name='user_ids']" position="before">
                <field name="project_id" readonly="1" options="{'no_open': True}" invisible="not parent_id"/>
                <field name="parent_task_hierarchy" readonly="1" invisible="not parent_id" 
                       class="o_row" style="color: #017e84; font-weight: bold; font-size: 14px; margin-top: 8px;"/>
            </xpath>

            <!-- Note: display_project_id field was removed in Odoo 17 -->
            <!-- The project_id field is now used directly -->

            <!-- Rename the Label of allocated hours (was planned_hours in Odoo 15) -->
            <!-- In Odoo 17, planned_hours was renamed to allocated_hours -->
            <xpath expr="//label[@for='allocated_hours']" position="attributes">
                <attribute name="string">Task Planned Hours</attribute>
            </xpath>


            <xpath expr="//header" position="inside">
                <field name="project_state" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
            </xpath>
            <!-- Placing the Assignment tab (My Team) after the Timesheet tab or in the appropriate place

                             <page string="My Team" groups="custom_project.group_project_manager">

             -->
            <xpath expr="//sheet/notebook" position="inside">
                <field name="project_id" invisible="1"/>
                <field name="technical_director_id" invisible="1"/>
                <field name="user_id" invisible="1"/>
                <field name="show_allocation" invisible="1"/>

                <page string="Assignees">
                    <field name="allocation_ids" nolabel="1" invisible="not show_allocation">

                        <list editable="bottom">
                            <field name="employee_id"/>
                            <field name="allocated_hours" widget="float_time"/>
                        </list>
                        <form string="Assignees Detail">
                            <group>
                                <field name="employee_id"/>
                                <field name="allocated_hours" widget="float_time"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>

            <!-- 24Feb  -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Request of Extra Time ⏱️">
                    <field name="overtime_request_ids" nolabel="1">
                        <list editable="bottom">
                            <field name="employee_id"/>
                            <field name="overtime_hours" widget="float_time"/>
                            <field name="technical_director_id" invisible="1"/>
                            <field name="project_manager_id"/>
                            <field name="project_id" invisible="1"/>
                            <field name="task_id" invisible="1"/>
                            <field name="description"/>
                            <field name="request_date" widget="datetime"/>

                        </list>
                        <form string="Request of Extra Time Details ⏱️">
                            <group>
                                <field name="employee_id"/>
                                <field name="overtime_hours" widget="float_time"/>
                                <field name="technical_director_id" invisible="1"/>
                                <field name="project_manager_id"/>
                                <field name="project_id" invisible="1"/>
                                <field name="task_id" invisible="1"/>
                                <field name="description"/>
                                <field name="request_date" widget="datetime"/>

                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
            <!-- Mar 3 about Sub-Tasks-->
            <xpath expr="//field[@name='child_ids']" position="attributes">
                <attribute name="context">
                    {'default_project_id': project_id,
                    'default_user_ids': user_ids,
                    'default_parent_id': id,
                    'default_partner_id': partner_id,
                    'default_allocated_hours': remaining_hours_for_subtasks}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='child_ids']" position="before">
                <group>
                    <field name="remaining_hours_for_subtasks" readonly="1"
                           string="Remaining Hours for Subtasks"
                           widget="float_time"/>
                </group>
            </xpath>

            <!-- In Odoo 18, allocated_hours field was removed from child_ids subtask list view -->
            <!-- This xpath is no longer valid as the field doesn't exist in the base view -->
            <!-- <xpath expr="//field[@name='child_ids']/list/field[@name='allocated_hours']" position="attributes">
                <attribute name="string">Sub-tasks Planned Hours</attribute>
            </xpath> -->

            <!-- Hide milestone_id and parent_id fields from the task form view -->
            <!-- <xpath expr="//field[@name='milestone_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
            <xpath expr="//field[@name='parent_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

    <!-- 4 Feb Change timesheet date widget to datetime -->
    <record id="view_analytic_line_form_inherit" model="ir.ui.view">
        <field name="name">account.analytic.line.form.inherit</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_form"/>
        <field name="arch" type="xml">
            <field name="date" position="replace">
                <field name="date" widget="datetime"/>
            </field>
        </field>
    </record>

</odoo>
