    <!-- Project Manager -->
    <!-- Group -->


    <record id="rule_project_task_creator_or_follower" model="ir.rule">
        <field name="name">Task: his/her own task</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="domain_force">
            ['|', ('create_uid', '=', user.id), ('message_partner_ids', 'in', [user.partner_id.id])]
        </field>
        <field name="groups" eval="[
            (4, ref('project.group_project_user')),
            (4, ref('hr_timesheet.group_hr_timesheet_user'))
        ]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>



    <record id="group_project_manager" model="res.groups">
        <field name="name">Project Manager</field>
        <field name="category_id" ref="base.module_category_project_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Member of this group will be added to each new project automatically -->
    <record id="group_followers_all_projects" model="res.groups">
        <field name="name">Forced Followers of all New Projects</field>
        <field name="category_id" ref="base.module_category_project_management"/>
    </record>


    <!-- Access -->
    <record id="project_manager_task_access" model="ir.model.access">
        <field name="name">project_manager_task_access</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="group_id" ref="custom_project.group_project_manager"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>


    <!-- Rules -->
    <record id="project_task_rule_project_manager" model="ir.rule">
        <field name="name">Project Task: Project Manager Access</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="domain_force">[('id', '!=', False)]</field>
        <field name="groups" eval="[(4, ref('custom_project.group_project_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="project_rule_own_projects_edit" model="ir.rule">
        <field name="name">Edit Own Projects Only</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="domain_force">[
            '|', '|',
            ('create_uid', '=', user.id),
            ('message_partner_ids', 'in', [user.partner_id.id]),
            '|',
            ('user_id', 'in', [user.id]),
            ('id', '!=', False) if user.has_group('base.group_system') else ('id', '=', False)

            ]
        </field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Note: project.delete.wizard was removed in Odoo 16/17, so this access record is no longer needed -->

    <!-- A_zeril_A, 2025-10-06: Security group for Commercial Director -->
    <record id="group_commercial_director" model="res.groups">
        <field name="name">Commercial Director</field>
        <field name="category_id" ref="base.module_category_project"/>
        <field name="implied_ids" eval="[(4, ref('project.group_project_manager'))]"/>
        <field name="comment">
            Users in this group have special permissions, such as the ability to manually add
            external contacts (non-users) as followers to projects and tasks.
        </field>
    </record>

</odoo>
