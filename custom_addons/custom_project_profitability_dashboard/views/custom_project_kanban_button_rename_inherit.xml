<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- 
            Inherit the project kanban view to rename the Dashboard action
            to "Contract Performance Sheet" for better business context.
            
            The original view adds a "Dashboard" link in the kanban card menu.
            We replace it with "Contract Performance Sheet".
        -->
        <record id="custom_project_view_kanban_inherit_project" model="ir.ui.view">
            <field name="name">custom.project.kanban.inherit.project</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.project_view_kanban_inherit_project"/>
            <field name="priority">300</field>
            <field name="arch" type="xml">
                <!-- Replace the Dashboard link text with Contract Performance Sheet -->
                <xpath expr="//div[@role='menuitem']/a[@name='project_update_all_action']" position="replace">
                    <a name="project_update_all_action" type="object" t-attf-context="{'active_id': #{record.id.raw_value} }">Contract Performance Sheet</a>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
