<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        This view hides the expected_revenue field from the form view.
        Note: The syntax was fixed for Odoo 18 - use position="attributes" 
        instead of position="replace" with attribute element inside.
    -->
    <record id="view_crm_lead_form_inherit_hide_revenue" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.hide.revenue</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <!-- Hide expected_revenue field -->
            <xpath expr="//field[@name='expected_revenue'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
