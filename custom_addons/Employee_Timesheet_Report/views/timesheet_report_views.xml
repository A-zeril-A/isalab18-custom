<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree/List view -->
    <record id="view_timesheet_report_tree" model="ir.ui.view">
        <field name="name">timesheet.report.list</field>
        <field name="model">timesheet.report</field>
        <field name="arch" type="xml">
            <list string="Timesheet Report" default_order="date desc, employee_id">
                <header>
                    <button name="action_export_xml" 
                            string="Export XML" 
                            type="object" 
                            class="btn-primary"
                            title="Export selected records to XML for payroll"/>
                </header>

                <field name="employee_id"/>
                <field name="date"/>
                <field name="date_time" widget="datetime"/>
                <field name="end_time" widget="datetime"/>

                <!-- Colored display fields -->
                <field name="colored_delay_display" string="Delay" optional="hide"/>
                <field name="colored_day_display" string="Day" optional="hide"/>
                
                <!-- Time fields with totals -->
                <field name="total_hours" string="Total Hours" sum="Total" widget="float_time"/>
                <field name="office_hours" string="Office Hours" sum="Total" widget="float_time"/>
                <field name="hours_18_22" string="Overtime 18-22" sum="Total" widget="float_time"/>
                <field name="hours_22_06" string="Night OT 22-06" sum="Total" widget="float_time" optional="hide"/>
                <field name="hours_shortage" string="Hours Shortage" sum="Total" widget="float_time" optional="hide"/>
                
                <!-- Leave type -->
                <field name="leave_type" string="Leave Type" optional="show"/>

                <!-- Hidden helper fields (only SQL view fields, not computed) -->
                <field name="is_delayed" column_invisible="1"/>
                <field name="is_weekend" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_timesheet_report_form" model="ir.ui.view">
        <field name="name">timesheet.report.form</field>
        <field name="model">timesheet.report</field>
        <field name="arch" type="xml">
            <form string="Timesheet Report" create="false" edit="false">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="employee_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Time Information">
                            <field name="date"/>
                            <field name="date_time" widget="datetime"/>
                            <field name="end_time" widget="datetime"/>
                            <field name="colored_day_display" string="Day"/>
                        </group>
                        <group string="Work Details">
                            <field name="project_id"/>
                            <field name="task_id"/>
                            <field name="leave_type"/>
                        </group>
                    </group>
                    <group>
                        <group string="Hours Summary">
                            <field name="total_hours" widget="float_time"/>
                            <field name="office_hours" widget="float_time"/>
                            <field name="hours_shortage" widget="float_time"/>
                        </group>
                        <group string="Overtime">
                            <field name="hours_18_22" widget="float_time"/>
                            <field name="hours_22_06" widget="float_time"/>
                        </group>
                    </group>
                    <group>
                        <group string="Delay Information">
                            <field name="colored_delay_display" string="Delay"/>
                            <field name="delay_hours" widget="float_time"/>
                            <field name="is_delayed"/>
                        </group>
                        <group string="Status">
                            <field name="is_weekend"/>
                            <field name="day_of_week"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_timesheet_report_search" model="ir.ui.view">
        <field name="name">timesheet.report.search</field>
        <field name="model">timesheet.report</field>
        <field name="arch" type="xml">
            <search string="Timesheet Report">
                <field name="employee_id" string="Employee" 
                       filter_domain="['|', ('employee_id.name', 'ilike', self), ('employee_id.user_id.name', 'ilike', self)]"/>
                <field name="date"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="leave_type"/>

                <separator/>
                <filter string="My Timesheets" name="my_timesheets" 
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <separator/>
                <filter string="Delayed" name="delayed" 
                        domain="[('is_delayed', '=', True)]"/>
                <filter string="On Time" name="on_time" 
                        domain="[('is_delayed', '=', False)]"/>
                <separator/>
                <filter string="Short Hours (&lt;8h)" name="short_hours" 
                        domain="[('total_hours', '&lt;', 8), ('total_hours', '&gt;', 0)]"/>
                <separator/>
                <filter string="Weekends" name="weekends" 
                        domain="[('is_weekend', '=', True)]"/>
                <filter string="Working Days" name="working_days" 
                        domain="[('is_weekend', '=', False)]"/>
                <separator/>
                <filter string="Leave Records" name="leaves" 
                        domain="[('leave_type', '!=', False)]"/>
                <filter string="Timesheet Records" name="timesheets" 
                        domain="[('leave_type', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                    <filter string="Week" name="group_week" context="{'group_by': 'date:week'}"/>
                    <filter string="Month" name="group_month" context="{'group_by': 'date:month'}"/>
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Task" name="group_task" context="{'group_by': 'task_id'}"/>
                    <filter string="Leave Type" name="group_leave" context="{'group_by': 'leave_type'}"/>
                    <filter string="Delayed Status" name="group_delayed" context="{'group_by': 'is_delayed'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_timesheet_report" model="ir.actions.act_window">
        <field name="name">Timesheet Report</field>
        <field name="res_model">timesheet.report</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_timesheet_report_search"/>
        <field name="context">{'search_default_my_timesheets': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Employee work hours report
            </p>
            <p>
                This report displays employee working hours with:
                <ul>
                    <li>Office hours calculation (8:30-18:30)</li>
                    <li>Overtime tracking (18:00-22:00)</li>
                    <li>Night overtime (22:00-06:00)</li>
                    <li>Lateness/delay tracking</li>
                    <li>Leave records integration</li>
                </ul>
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_timesheet_report_root" 
              name="Timesheet Reports"
              web_icon="Employee_Timesheet_Report,static/description/icon.png"
              sequence="100"/>
    
    <menuitem id="menu_timesheet_report" 
              name="Timesheet Report" 
              parent="menu_timesheet_report_root" 
              action="action_timesheet_report"
              sequence="10"/>
</odoo>
